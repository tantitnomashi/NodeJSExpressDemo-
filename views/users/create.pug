
extends ../layouts/common.pug
block content
    h1 Create User 
    if errors
        each error in errors 
            .alert.alert-danger.col-4= error
    .container.pt-5.align-items-center
        form(action="/users/create", method="POST", enctype="multipart/form-data")
            .form-group.col-lg-6
                label(for="name") Name
                input#name.form-control(type="text", name="name",value=values ? values.name : '')
            .form-group.col-lg-6
                label(for="phone") Phone
                input#phone.form-control(type="text", name="phone",value=values ? values.phone : '')
            .form-group.col-lg-6
                label(for="email") Email
                input#phone.form-control(type="text", name="email")
            .form-group.col-lg-6
                label(for="password") Password
                input#phone.form-control(type="password", name="password")
            .form-group.col-lg-6
                label(for="avatar") Avatar
                input#phone.form-control-file(type="file", name="avatar")
            button.btn.btn-primary.mt-3 Create 
    