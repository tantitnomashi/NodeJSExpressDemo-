extends ../layouts/common.pug
block content
    h1 
        span.mr-3 User list
        a.btn.btn-primary.mr-2(href="/users/create") New 
    .d-flex.align-items-center
        form.ml-auto(action="/users/search",method="GET", class="d-flex")
            input(type="text", name="q", id="search", class="form-control")
            button.btn.btn-primary.ml-2  Search
    table.table.text-center
        tr
            th Avatar
            th Name 
            th Phone  
            th Details     
        each user in users 
            tr  
                td
                    img(src=user.avatar, width="64")
                td= user.name
                td= user.phone           
                td 
                    a.btn.btn-dark(href="/users/" + user.id) View 


