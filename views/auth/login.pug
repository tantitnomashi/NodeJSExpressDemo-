
extends ../layouts/common.pug
block content
    h1 Login 
    if errors
        each error in errors 
            .alert.alert-danger.col-4= error
    .container.pt-5.align-items-center
        form(action="/auth/login", method="POST")
            .form-group.col-lg-6
                label(for="email") Email
                input#email.form-control(type="text", name="email",value=values ? values.email : '')
            .form-group.col-lg-6
                label(for="password") Password
                input#password.form-control(type="password", name="password",value=values ? values.password : '')
            button.btn.btn-primary.mt-3 Login 
            